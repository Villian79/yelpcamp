<%- layout('/layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Campground Details:</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" novalidate class="validated-form">
            <div>
                <div class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input class="form-control" type="text" id="title" placeholder="Campground Title here" name="campground[title]" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" type="text" id="location" placeholder="City, State" name="campground[location]" required>
                    <div class="valid-feedback">Looks Good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL:</label>
                    <input class="form-control" type="text" id="photoUrl" placeholder="URL of the image" name="campground[photoUrl]" required>
                    <div class="valid-feedback">Looks Good!</div>
                </div>
                <div class="mb-3">
                    <label for="price">Price:</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="campground[price]" required>
                        <div class="valid-feedback">Looks Good!</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description:</label>
                    <textarea class="form-control" type="text" id="description" placeholder="Tell smt about this campground" name="campground[description]" required></textarea>
                    <div class="valid-feedback">Looks Good!</div>
                </div>
            
                <div class="mb-3">
                    <button class="btn btn-success">Add Campground</button>
                </div>
                <a href="/campgrounds">Back to all campgrounds</a>
            </div>
        </form>
    </div>
</div>