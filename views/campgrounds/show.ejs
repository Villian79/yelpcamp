<%- layout('/layouts/boilerplate') %>
<h1><%= campground.title %> </h1>
<img src="<%= campground.photoUrl.small %>" alt="<%= campground.description %> ">
<h4>Location: <%= campground.location %> </h4>
<p>ID: <%= campground._id %> </p>
<footer>
    <p><a href="/campgrounds/<%= campground._id %>/edit">Edit</a></p>
    <p><a href="/campgrounds">All Campgrounds</a></p>
    <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
        <button>DELETE</button>            
    </form>
</footer>
