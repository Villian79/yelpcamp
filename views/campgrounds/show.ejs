<%- layout('/layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3 mb-5">
        <div class="card" class="mb-3">
            <img src="<%= campground.photoUrl %> " class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %> </h5>
                <p class="card-text"><%= campground.description %> </p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted">Location: <%= campground.location %> </li>
                <li class="list-group-item">Price: $ <%= campground.price %>.00/per day </li>
            </ul>
            <div class="card-body">
                <a href="/campgrounds/<%= campground._id %>/edit " class="card-link btn btn-warning">Edit</a>
                <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button class="btn btn-danger">DELETE</button>            
                </form>
            </div>
            <div class="card-footer text-muted d-flex justify-content-between">
                <span>Last seen 2 days ago</span>
                <a href="/campgrounds" class="btn btn-info text-right">All Campgrounds</a>
            </div>
        </div>
        <h3>Leave A Review:</h3>
        <div>
            <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="mb-3">
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating:</label>
                    <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Review:</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="5"></textarea>
                </div>
                <button class="btn btn-success">Submit!</button>
            </form>
        </div>
    </div>
</div>

