<%- layout('/layouts/boilerplate') -%>
<div class="row">
    <h1 class="text-center">Edit Campground:</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT " method="POST">
            <div>
                <p class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input class="form-control" type="text" id="title" placeholder="Campground Title here" name="campground[title]" value="<%= campground.title %> ">
                </p>
                <p class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" type="text" id="location" placeholder="City, State" name="campground[location]" value="<%= campground.location %>">
                </p>
                <p class="mb-3">
                    <label class="form-label" for="image">Image URL:</label>
                    <input class="form-control" type="text" id="photoUrl" placeholder="URL of the image" name="campground[photoUrl]" value="<%= campground.photoUrl %>">
                </p>
                <p class="mb-3">
                    <label for="price">Price:</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="number" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="campground[price]" value="<%= campground.price %>">
                    </div>
                    <p class="mb-3">
                        <label class="form-label" for="description">Description:</label>
                        <textarea class="form-control" type="text" id="description" placeholder="Tell smt about this campground" name="campground[description]"><%= campground.description %></textarea>
                    </p>
                </p>
            
                <p class="mb-3">
                    <button class="btn btn-warning">Update Campground</button>
                </p>
                <a href="/campgrounds/<%= campground._id %> ">Back to <%= campground.title %> Campground</a>
            </div>
        </form>
    </div>
</div>
